   # assume Zsh
   #zsh custom_script.sh
#  echo ZSH
#elif [ -n "`$SHELL -c 'echo $BASH_VERSION'`" ]; then
   # assume Bash
   #sh custom_script.sh
#   echo BASH
#else
#echo FISH
#fi





